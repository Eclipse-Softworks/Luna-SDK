{
    "name": "@eclipse/luna-sdk",
    "version": "1.0.0",
    "description": "Official TypeScript SDK for the Eclipse Softworks Platform API",
    "author": "Eclipse Softworks",
    "license": "MIT",
    "type": "module",
    "main": "./dist/index.cjs",
    "module": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "import": {
                "types": "./dist/index.d.ts",
                "default": "./dist/index.js"
            },
            "require": {
                "types": "./dist/index.d.cts",
                "default": "./dist/index.cjs"
            }
        }
    },
    "files": [
        "dist"
    ],
    "scripts": {
        "build": "tsup",
        "dev": "tsup --watch",
        "test": "vitest run",
        "test:watch": "vitest",
        "test:coverage": "vitest run --coverage",
        "lint": "eslint src tests",
        "lint:fix": "eslint src tests --fix",
        "format": "prettier --write src tests",
        "format:check": "prettier --check src tests",
        "typecheck": "tsc --noEmit",
        "clean": "rimraf dist coverage",
        "prepublishOnly": "npm run clean && npm run build && npm run test",
        "release": "npm run prepublishOnly && npm publish --access public"
    },
    "engines": {
        "node": ">=18"
    },
    "keywords": [
        "eclipse",
        "luna",
        "sdk",
        "api",
        "client",
        "typescript"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/eclipse-softworks/luna-sdk.git",
        "directory": "packages/typescript"
    },
    "bugs": {
        "url": "https://github.com/eclipse-softworks/luna-sdk/issues"
    },
    "homepage": "https://github.com/eclipse-softworks/luna-sdk#readme",
    "devDependencies": {
        "@eslint/js": "^9.0.0",
        "@types/node": "^20.10.0",
        "@vitest/coverage-v8": "^1.1.0",
        "eslint": "^8.56.0",
        "msw": "^2.12.4",
        "prettier": "^3.2.0",
        "rimraf": "^5.0.5",
        "tsup": "^8.0.1",
        "typescript": "^5.3.3",
        "typescript-eslint": "^7.0.0",
        "vitest": "^1.1.0"
    },
    "peerDependencies": {
        "typescript": ">=4.7.0"
    },
    "peerDependenciesMeta": {
        "typescript": {
            "optional": true
        }
    }
}
